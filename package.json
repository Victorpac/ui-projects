{
  "name": "ui-projects-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready monorepo for static demo hosting via GitHub Pages",
  "type": "module",
  "scripts": {
    "setup": "pnpm install",
    "dev": "node scripts/build-pages.mjs --watch",
    "dev:index": "node scripts/generate-index.mjs --watch",
    "validate": "node scripts/validate-projects.mjs",
    "build:pages": "node scripts/build-pages.mjs",
    "build:project": "node scripts/build-project.mjs",
    "clean": "node scripts/clean.mjs",
    "lint": "echo \"No linting configured yet\"",
    "docs:check": "node scripts/validate-projects.mjs --docs-only"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.1",
    "yargs": "^18.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
